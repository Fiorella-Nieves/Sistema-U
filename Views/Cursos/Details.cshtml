@model PortalAcademico.Models.Curso

@{
    ViewData["Title"] = "Detalles del Curso";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<h2>@Model.Nombre</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Código</dt>
        <dd class="col-sm-9">@Model.Codigo</dd>

        <dt class="col-sm-3">Créditos</dt>
        <dd class="col-sm-9">@Model.Creditos</dd>

        <dt class="col-sm-3">Cupo Máximo</dt>
        <dd class="col-sm-9">@Model.CupoMaximo</dd>

        <dt class="col-sm-3">Horario</dt>
        <dd class="col-sm-9">@Model.HorarioInicio.ToString(@"hh\:mm") - @Model.HorarioFin.ToString(@"hh\:mm")</dd>
    </dl>
</div>

<div class="mt-4">
    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Create", "Matriculas", new { cursoId = Model.Id })" 
           class="btn btn-success btn-lg">Inscribirse</a>
    }
    else
    {
        <a href="@Url.Page("/Account/Login", new { area = "Identity" })" 
           class="btn btn-warning">Iniciar sesión para inscribirse</a>
    }
    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver al catálogo</a>
</div>