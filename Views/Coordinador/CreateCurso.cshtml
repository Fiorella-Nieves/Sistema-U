@model Sistema_U.Models.Curso

@{
    ViewData["Title"] = "Crear Nuevo Curso";
}

<h2>Crear Nuevo Curso</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateCurso">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Creditos" class="control-label"></label>
                <input asp-for="Creditos" class="form-control" min="1" max="10" />
                <span asp-validation-for="Creditos" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CupoMaximo" class="control-label"></label>
                <input asp-for="CupoMaximo" class="form-control" min="1" max="100" />
                <span asp-validation-for="CupoMaximo" class="text-danger"></span>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="HorarioInicio" class="control-label">Horario Inicio</label>
                    <input asp-for="HorarioInicio" type="time" class="form-control" />
                    <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="HorarioFin" class="control-label">Horario Fin</label>
                    <input asp-for="HorarioFin" type="time" class="form-control" />
                    <span asp-validation-for="HorarioFin" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="Activo" />
                <label class="form-check-label" asp-for="Activo"></label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Crear Curso" class="btn btn-primary" />
                <a href="@Url.Action("Cursos")" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}