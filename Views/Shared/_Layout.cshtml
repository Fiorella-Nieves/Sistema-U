@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var ultimoCursoId = HttpContextAccessor.HttpContext?.Session.GetString("UltimoCursoVisitadoId");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Académico</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">Portal Académico</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Home")">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Cursos")">Catálogo de Cursos</a>
                        </li>
                        
                        <!-- Último curso visitado (solo si existe) -->
                        @if (!string.IsNullOrEmpty(ultimoCursoId))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary" href="@Url.Action("Details", "Cursos", new { id = ultimoCursoId })">
                                    📚 Volver al último curso
                                </a>
                            </li>
                        }

                        <!-- Panel coordinador (solo para coordinadores) -->
                        @if (User.IsInRole("Coordinador"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    Panel Coordinador
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Coordinador")">Dashboard</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Cursos", "Coordinador")">Gestión de Cursos</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Matriculas", "Coordinador")">Gestión de Matrículas</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>